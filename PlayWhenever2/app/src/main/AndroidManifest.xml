<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.radoslav.playwhenever"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".logIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".newAccount"
            android:label="@string/title_activity_new"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".playgrounds">
        </activity>
        <activity android:name=".showAppointments">
        </activity>
        <activity
            android:name=".addAppointment"
            android:label="@string/title_activity_add_appointment"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
